{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "MongoDB": "mongodb://admin:password@localhost:27017",
    "Redis": "localhost:6379",
    "Kafka": "localhost:9092"
  },
  "MongoDB": {
    "DatabaseName": "task_scheduler",
    "TasksCollectionName": "tasks",
    "ExecutionHistoryCollectionName": "execution_history"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "GroupId": "task-scheduler-api",
    "TasksTopic": "scheduled-tasks",
    "ResultsTopic": "task-results",
    "DeadLetterTopic": "task-dead-letter"
  },
  "TaskScheduler": {
    "DefaultTimeoutSeconds": 30,
    "MaxPayloadSizeBytes": 65536,
    "DefaultRetryPolicy": {
      "MaxRetries": 3,
      "RetryDelaySeconds": 60
    }
  }
}
